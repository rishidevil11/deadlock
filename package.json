{
  "name": "deadlock-platform",
  "version": "1.0.0",
  "description": "Coding competition platform featuring DeadLock and Crack the Code games",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "dev:web": "npm -w @deadlock/web run dev",
    "dev:server": "npm -w @deadlock/server run dev",
    "build": "npm run build:shared && npm run build:web && npm run build:server",
    "build:web": "npm -w @deadlock/web run build",
    "build:server": "npm -w @deadlock/server run build",
    "build:shared": "npm -w @deadlock/shared run build",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "db:generate": "npm -w @deadlock/server run db:generate",
    "db:push": "npm -w @deadlock/server run db:push",
    "db:studio": "npm -w @deadlock/server run db:studio",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
