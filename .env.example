# ================================
# Server Configuration
# ================================
NODE_ENV=development
PORT=3000
HOST=localhost

# ================================
# Database Configuration
# ================================
# SQLite for development (default)
DATABASE_URL="file:./dev.db"

# PostgreSQL for production (uncomment when deploying)
# DATABASE_URL="postgresql://user:password@localhost:5432/deadlock?schema=public"

# ================================
# Authentication
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret-change-in-production

# ================================
# Frontend Configuration
# ================================
VITE_API_URL=http://localhost:3000
VITE_SOCKET_URL=http://localhost:3000

# ================================
# Code Execution (Sandboxed)
# ================================
CODE_EXECUTION_TIMEOUT=10000
CODE_EXECUTION_MEMORY_LIMIT=128
MAX_CONCURRENT_EXECUTIONS=10

# ================================
# Game Configuration
# ================================
DEADLOCK_ROUND_DURATION=300
DEADLOCK_MAX_TEAMS=10
DEADLOCK_TEAM_SIZE=3

CRACK_THE_CODE_TIME_LIMIT=1800
CRACK_THE_CODE_MAX_ATTEMPTS=50

# ================================
# Admin Configuration
# ================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password

# ================================
# Redis (Optional - for scaling)
# ================================
# REDIS_URL=redis://localhost:6379
